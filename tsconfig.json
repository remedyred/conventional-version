{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"moduleResolution": "node",
		"module": "NodeNext",
		"strict": true,
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"downlevelIteration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
		"noImplicitAny": false,
		"noImplicitThis": false,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"*"
			]
		}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./src/globals.ts"
	]
}